<style>
    #ds-recent-comments {
        background: rgba(0,0,0,0.1);
        border: 0px solid #ddd;
        border-radius: 0px;
        box-shadow: 0 1px 3px #b8b9b9;
		color:#FFFFFF;
    }
    #ds-recent-comments:hover {
       /*background-color: #f7f7f7;*/
    }
    #ds-recent-comments li.ds-comment {
        font-size: 13px;
        list-style-type: none;
        margin: 0 !important;
        padding: 6px 0 !important;
        position: relative !important;
        word-wrap: break-word;
        border-top: 0 none;
        border-radius: 2px;
    }
    #ds-recent-comments li.ds-comment .ds-avatar {
        left: 0 !important;
        position: absolute !important;
        top: 6px !important;
        border: 0 none;
        border-radius: 50%;
        margin-left: 8px;
    }
    #ds-recent-comments li.ds-comment .ds-avatar img {
        border-radius: 50%;
    }
    #ds-recent-comments li.ds-comment .ds-meta {
        margin-top: 2px;
    }
    #ds-recent-comments li.ds-comment .ds-excerpt {
        vertical-align: middle;
        font-size:10px;
    }
    #ds-recent-comments li.ds-comment.ds-show-avatars {
        padding-left: 48px !important;
    }
</style>
<ul class="ds-recent-comments" id="ds-recent-comments" data-num-items="1" data-show-avatars="1" data-show-time="0" data-show-admin="0" data-excerpt-length="30" style="height:auto;width:240px;position:fixed;top:80px;right:140px;z-index:9999;display:none"></ul>
<!--多说js加载开始，一个页面只需要加载一次 -->
<script type="text/javascript">
    var duoshuoQuery = {
        short_name: "<%=theme.duoshuo_shortname%>"
    };
    (function() {
        var ds = document.createElement('script');
        ds.type = 'text/javascript';
        ds.async = true;
        ds.src = 'http://static.duoshuo.com/embed.js';
        ds.charset = 'UTF-8';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(ds);
    })(
        console.info($("#ds-recent-comments a"))
    );
	$("#ds-recent-comments").fadeIn(2500);
</script>
